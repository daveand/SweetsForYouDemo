@model WebApplication2.Models.ProductModel

@{
    ViewData["Title"] = "Radera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Radera</h1>

<h3>Är du säker på att du vill radera denna produkt?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Titel
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Beskrivning
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Kategori
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Category)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-danger" />
        <br /><br />
        <a asp-action="Index">Tillbaka</a>
    </form>
</div>
